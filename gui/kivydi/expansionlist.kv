<GameListPanel>:
    padding: dp(8),dp(4),dp(8),dp(4)
    id: game_item
    MDExpansionPanelHeader:
        padding: dp(8),0,dp(8),0
        radius: dp(8),0,dp(8),0
        id: panel_header
    MDExpansionPanelContent:
        id: panel_content
        orientation: 'vertical'
        y: 82
        padding: dp(12), 0, dp(12), dp(12)
        spacing: dp(8)
        MDLabel:
            adaptive_height: True
            padding: 0

<SlotListItemHeader>:
    id: slot_item_header
    spacing: dp(4)
    padding: dp(8),dp(4),dp(8),dp(4)
    orientation: "horizontal"
    height: dp(70)
    size_hint_y: None
    theme_bg_color: "Custom"
    md_bg_color: app.theme_cls.secondaryContainerColor
    MDListItemLeadingAvatar:
        width: dp(40)
        id: leading_avatar
        source: root.game_data['avatar']
        pos_hint: {"center_y": 0.5, "center_x": 0.5}
    MDBoxLayout:
        orientation: "vertical"
        size_hint_x: 1
        padding: 0,dp(10),0,dp(10)
        MDBoxLayout:
            id: slot_item_container
            orientation: "horizontal"
            size_hint_y: .5
            MDListItemHeadlineText:
                text: root.slot_name
                theme_text_color: "Custom"
                text_color: app.theme_cls.onSecondaryContainerColor
                pos_hint: {"center_y": 0.5}
        MDBoxLayout:
            id: game_item_container
            orientation: "horizontal"
            size_hint_y: .5
            MDListItemTertiaryText:
                text: root.game
                theme_text_color: "Custom"
                pos_hint: {"center_y": 0.5}
                text_color: app.theme_cls.onSecondaryContainerColor
    GameTrailingPressedIconButton:
        width: dp(40)
        id: chevron
        icon: "gamepad-round-right"
        pos_hint: {"center_y": 0.5, "center_x": 0.5}
        on_release: root.panel.toggle_expansion(self)


<GameListItemHeader>:
    id: game_item_header
    spacing: dp(4)
    padding: dp(8),dp(4),dp(8),dp(4)
    height: dp(60)
    size_hint_y: None
    theme_bg_color: "Custom"
    md_bg_color: app.theme_cls.secondaryContainerColor
    on_release: root.on_press()
    MDListItemLeadingAvatar:
        id: leading_avatar
        source: root.game_data['cover_url']
        width: dp(40)
        pos_hint: {"center_y": 0.5, "center_x": 0.5}
    MDListItemSupportingText:
        id: game_item_header_text
        text: root.game_tag
        text_color: app.theme_cls.onSurfaceColor
        theme_text_color: "Custom"
        role: "medium"
        shorten: False
        pos_hint: {"center_y": 0.5, "center_x": 0.5}
    GameTrailingPressedIconButton:
        width: dp(40)
        id: chevron
        icon: "gamepad-round-right"
        pos_hint: {"center_y": 0.5, "center_x": 0.5}
        on_release: root.panel.toggle_expansion(self)

<GameListItemTooltip>:
    MDTooltipPlain:
        text: root.tooltip_text
        do_wrap: True
        adaptive_height: True
        theme_text_color: "Custom"
        theme_bg_color: "Custom"
        md_bg_color: app.theme_cls.secondaryContainerColor
        text_color: app.theme_cls.onSecondaryContainerColor

<GameListItem>:
    tooltip_text: ""
    ripple_effect: False
    MDListItemLeadingIcon:
        icon: root.icon

<GameListItemLongText>:
    text: root.text
    size_hint_x: 1
    tooltip_text: root.tooltip_text
    shorten: False
    do_wrap: False
    adaptive_height: True
    role: "small"

<GameListItemShortText>:
    text: root.text
    size_hint_x: 1
    shorten: False
    do_wrap: False
    adaptive_height: True
    role: "small"    

<SlotListItem>:
    spacing: dp(8)
    padding: 12, 12, 12, 12
    orientation: "vertical"
    id: slot_item
    ripple_effect: False
    height: dp(70)
    size_hint_y: None
    theme_shadow_color: "Custom"
    theme_bg_color: "Custom"
    md_bg_color: app.theme_cls.surfaceContainerColor
    theme_elevation_level: "Custom"
    MDBoxLayout:
        id: slot_item_top_container
        orientation: "horizontal"
        spacing: dp(4)
        size_hint_y: .5
        MDListItemLeadingIcon:
            id: slot_icon_location
            icon: "map-marker"
            pos_hint: {"center_y": 0.5}
        MDListItemSupportingText:
            id: slot_text_location
            text: root.location_name
            pos_hint: {"center_y": 0.5}
            do_wrap: False
            theme_text_color: "Custom"
            text_color: app.theme_cls.onSurfaceColor
    MDBoxLayout:
        id: slot_item_bottom_container
        orientation: "horizontal"
        spacing: dp(4)
        size_hint_y: .5
        MDListItemLeadingIcon:
            id: slot_icon_item
            icon: "treasure-chest"
            pos_hint: {"center_y": 0.5}
        MDListItemSupportingText:
            id: slot_text_item
            text: root.item_name
            pos_hint: {"center_y": 0.5}
            do_wrap: False
            theme_text_color: "Custom"
            text_color: app.theme_cls.onSurfaceColor
        MDListItemTrailingIcon:
            id: slot_icon_goal
            icon: "flag_checkered"
            pos_hint: {"center_y": 0.5}

<IconBadge>:
    text: ""
    theme_font_style: "Custom"
    role: "large"
    font_style: "Icon"
    theme_font_size: "Custom"
    font_size: dp(11)
